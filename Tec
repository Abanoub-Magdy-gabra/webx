            <div class="input-group">
                <label for="max-dsat">Maximum DSAT Score</label>
                <div class="input-wrapper">
                    <i class="input-icon fas fa-exclamation-triangle"></i>
                    <input id="max-dsat" type="number" placeholder="Enter maximum (0-100)" min="0" max="100">
                    <span class="unit">%</span>
                    <div class="tooltip">
                        <i class="fas fa-info-circle"></i>
                        <div class="tooltip-content">
                            The maximum acceptable dissatisfaction score threshold
                        </div>
                    </div>
                </div>
                <div class="error-message">Please enter a valid maximum between 0 and 100</div>
            </div>

            <div class="input-group">
                <label for="target-retention">Target Retention Rate</label>
                <div class="input-wrapper">
                    <i class="input-icon fas fa-user-check"></i>
                    <input id="target-retention" type="number" placeholder="Enter target (0-100)" min="0" max="100">
                    <span class="unit">%</span>
                    <div class="tooltip">
                        <i class="fas fa-info-circle"></i>
                        <div class="tooltip-content">
                            The percentage of customers you aim to retain
                        </div>
                    </div>
                </div>
                <div class="error-message">Please enter a valid target between 0 and 100</div>
